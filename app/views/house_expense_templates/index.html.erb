<p id="notice"><%= notice %></p>

<h1>Listing House Expense Templates</h1>

<table>
  <thead>
    <tr>
      <th>Expense name</th>
      <th>House</th>
      <th>Recurring frequency</th>
      <th>Recurring frequency value</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Is mandatory</th>
      <th>Default amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house_expense_templates.each do |house_expense_template| %>
      <tr>
        <td><%= house_expense_template.expense_name %></td>
        <td><%= house_expense_template.house_id %></td>
        <td><%= house_expense_template.recurring_frequency_id %></td>
        <td><%= house_expense_template.recurring_frequency_value %></td>
        <td><%= house_expense_template.effective_from %></td>
        <td><%= house_expense_template.effective_to %></td>
        <td><%= house_expense_template.is_mandatory %></td>
        <td><%= house_expense_template.default_amount %></td>
        <td><%= link_to 'Show', house_expense_template %></td>
        <td><%= link_to 'Edit', edit_house_expense_template_path(house_expense_template) %></td>
        <td><%= link_to 'Destroy', house_expense_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

