<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Listing Houses</div>
  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @houses.each do |house| %>
        <tr>
          <td><%= house.name %></td>
          <td><%= house.address %></td>
          <td>
            <%= link_to 'Show', house, class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_house_path(house), class: "btn btn-primary"  %>
            <%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New House', new_house_path, class: "btn btn-primary" %>
